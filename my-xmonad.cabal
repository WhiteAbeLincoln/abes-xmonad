name:         abes-xmonad
version:      0.1.0.0
synopsis:     Abraham White's xmonad configuration
homepage:     https://github.com/WhiteAbeLincoln/abes-xmonad
license:      MIT
license-file: LICENSE
author:       Abraham White
maintainer:   abelincoln.white@gmail.com
category:     System
build-type:   Simple
extra-source-files: Changelog.md
cabal-version:      >=1.10

executable abes-xmonad
  main-is:             xmonad.hs
  build-depends:       aeson>=0.11.2.1
                     , X11>=1.8
                     , base >=4.9 && <4.10
                     , bytestring>=0.10.8.1
                     , containers>=0.5.7.1
                     , directory>=1.2.6.2
                     , filepath>=1.4.1.0
                     , gtk-traymanager>=0.1.6
                     , hostname>=1.0
                     , mtl>=2.2.1
                     , multimap>=1.2.1
                     , process>=1.4.3.0
                     , split
                     , taffybar>=0.4.6
                     , transformers>=0.5.2.0
                     , tuple >= 0.3.0.2
                     , utf8-string
                     , xmonad-contrib>=0.13
                     , xmonad>=0.13
  hs-source-dirs:      src
  default-language:    Haskell2010
